  "homepage": "https://github.com/OpesanyaAdebayo/Typescript-Node-Starter#readme",
  "dependencies": {
    "ejs": "^2.6.1",
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.1.5",
    "@types/node": "^10.5.2",
    "@types/shelljs": "^0.8.0",
    "@types/supertest": "^2.0.4",
    "jest": "^23.3.0",
    "jest-cli": "^23.4.0",
    "nodemon": "^1.17.5",
    "shelljs": "^0.8.2",
    "supertest": "^3.1.0",
