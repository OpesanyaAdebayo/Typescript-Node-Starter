{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "Simple boilerplate Node.js Application with Typescript",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "watch-node": "nodemon dist/server.js",
    "serve": "node dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
